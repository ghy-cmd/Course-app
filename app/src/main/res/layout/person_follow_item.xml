<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.xuexiang.xui.widget.button.ButtonView
            android:id="@+id/follow_btn"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:text="+关注"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/radiusImageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/radiusImageView3"
            app:textRadius="20dp"
            app:textSolidColor="@color/purple_500" />

        <com.xuexiang.xui.widget.button.ButtonView
            android:id="@+id/followed_btn"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:text="已关注"
            android:textAlignment="center"
            android:textColor="@color/gray_time"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/radiusImageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/radiusImageView3"
            app:textRadius="10dp"
            app:textSolidColor="@color/gray_back" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C4C4C4"
            app:layout_constraintBottom_toBottomOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="11"
            android:maxLines="1"
            android:text="个人签名明明木么么么么么么么木木木木"
            android:textColor="@color/gray_600"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/radiusImageView3"
            app:layout_constraintStart_toStartOf="@+id/textView38" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="名字"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/radiusImageView3"
            app:layout_constraintTop_toTopOf="@+id/radiusImageView3" />

        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/radiusImageView3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="35dp"
            android:src="@drawable/avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="24dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>